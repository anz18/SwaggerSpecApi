{
  "swagger" : "2.0",
  "info" : {
    "description" : "Get list of test sequences to be run for given product version id",
    "version" : "1.0",
    "title" : "AutoSmoke Test Sequences"
  },
  "paths" : {
    "/autosmoke/api/1.0/tests/product/{product_version_id}" : {
      "get" : {
        "summary" : "Get Autosmoke Tests",
        "parameters" : [ {
          "name" : "product_version_id",
          "in" : "path",
          "description" : "Product version id of the product",
          "required" : true,
          "type" : "string"
        } ],
        "responses" : {
          "200" : {
            "description" : "List of test sequences generated by Autosmoke",
            "schema" : {
              "$ref" : "#/definitions/tests_sequence"
            }
          },
          "401" : {
            "description" : "Unauthorized"
          },
          "403" : {
            "description" : "Forbidden"
          },
          "404" : {
            "description" : "Not found"
          },
          "default" : {
            "description" : "Unexpected error"
          }
        }
      }
    }
  },
  "definitions" : {
    "tests_sequence" : {
      "type" : "object",
      "properties" : {
        "product_version_id" : {
          "type" : "string",
          "description" : "Product version id of the product"
        },
        "total_test_sequences" : {
          "type" : "integer",
          "description" : "total number of test sequences in test suite"
        },
        "autosmoke_tests" : {
          "type" : "integer",
          "description" : "number of test sequences selected by autosmoke"
        },
        "complete_test_suite_coverage" : {
          "type" : "integer",
          "description" : "coverage over whole code by running complete test suite"
        },
        "autosmoke_coverage" : {
          "type" : "integer",
          "description" : "coverage over whole code by running autosmoke tests"
        },
        "test_sequences" : {
          "type" : "array",
          "description" : "list of test sequences",
          "items" : {
            "$ref" : "#/definitions/tests_sequence_test_sequences"
          }
        }
      }
    },
    "tests_sequence_test_sequences" : {
      "properties" : {
        "seq_id" : {
          "type" : "string",
          "description" : "sequence id"
        }
      }
    }
  }
}